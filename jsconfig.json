{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "nodenext",
    "paths": {
      "scss/*": ["src/scss/*"],
      "utils/*": ["src/utils/*"],
      "features/*": ["src/features/*"],
      "Components/*": ["src/Components/*"],
      "Actions/*": ["src/Actions/*"],
      "Constants/*": ["src/Constants/*"],
      "Services/*": ["src/Services/*"],
      "Contexts/*": ["src/Contexts/*"],
      "CustomHooks/*": ["src/CustomHooks/*"]
    }
  },
  "exclude": ["node_modules"]
}
